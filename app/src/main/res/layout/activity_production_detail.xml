<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <include
        android:id="@+id/head"
        layout="@layout/head_for_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />


    <ScrollView
        android:id="@+id/detail_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/head"
        android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_width="450dp"
                android:layout_height="match_parent"
                android:gravity="top"
                android:minHeight="450dp">
                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/goods_demo"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/picture"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:maxEms="18"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:typeface="monospace"
                    android:text="低负荷分分合合uf大大方方回复iffff1111111111111111111111111111111111111111111"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="@string/product_price"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="25dp"
                        android:text="￥"/>

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="1690.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="@string/product_character"/>

                    <TextView
                        android:id="@+id/character"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text="白红"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="@string/product_area"/>

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text="中国"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="@string/product_weight"/>

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text="200g"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="@string/product_biref"/>

                    <TextView
                        android:id="@+id/biref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:text="和田玉四方股份的福尔恶狠狠地发uierfhidfire分火热的风景如画热乎乎地发福利局副如何黄日华第三方如何立法会if日发布了几分节日福利局"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:id="@+id/audio_name"
                    android:textSize="25dp"
                    android:text="@string/audio_tip"/>

                <include
                    android:id="@+id/audio_player"
                    layout="@layout/layout_music"
                    android:layout_width="400dp"
                    android:layout_height="60dp"/>

            </LinearLayout>

        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            ></WebView>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_attention"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/detail_like"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/cancel_attention"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/delete"
            android:visibility="gone"/>

    </LinearLayout>

    <ListView
        android:id="@+id/menu"
        android:layout_height="wrap_content"
        android:layout_width="400dp"
        android:layout_marginTop="446dp"
        android:layout_marginLeft="500dp"
        android:background="#e0cfbb"
        android:visibility="gone"
        ></ListView>

    <!--<com.singularityclub.shopping.Utils.tools.VertialBar
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="850dp"
        android:layout_marginTop="260dp"
        android:progressDrawable="@drawable/bg_bar"
        android:thumb="@color/lightgreen"
        android:id="@+id/sound"
        android:visibility="gone"/>-->

</RelativeLayout>