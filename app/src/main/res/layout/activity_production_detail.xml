<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <include
        android:id="@+id/head"
        layout="@layout/head_for_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />


    <ScrollView
        android:id="@+id/detail_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/head">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/detail_bg"
                android:id="@+id/picture">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_marginLeft="68dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/goods_demo"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/picture"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:maxEms="14"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="促售价："/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="￥"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="1690.00"
                        android:textColor="@color/red"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:id="@+id/audio_name"
                    android:textSize="25dp"
                    android:textColor="@color/blue"
                    android:text="@string/audio_tip"/>

                <include
                    android:id="@+id/audio_player"
                    layout="@layout/layout_music"
                    android:layout_width="450dp"
                    android:layout_height="60dp"/>

            </LinearLayout>

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:shrinkColumns="0"
            android:stretchColumns="0"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="@string/product_name"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="2222"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="@string/product_price"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="2222"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="@string/product_biref"/>
                <TextView
                    android:id="@+id/biref"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="2222"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="@string/product_character"/>
                <TextView
                    android:id="@+id/character"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222222"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="@string/product_area"/>
                <TextView
                    android:id="@+id/area"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="2222"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="@string/product_weight"/>
                <TextView
                    android:id="@+id/weight"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/text_border"
                    android:textSize="20dp"
                    android:text="2222"
                    />
            </TableRow>
        </TableLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"></WebView>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_attention"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/detail_like"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/cancel_attention"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/cart_like"
            android:visibility="gone"/>

    </LinearLayout>

    <ListView
        android:id="@+id/menu"
        android:layout_height="wrap_content"
        android:layout_width="450dp"
        android:layout_marginTop="363dp"
        android:layout_marginLeft="400dp"
        android:background="@color/white"
        android:visibility="gone"
        ></ListView>

</RelativeLayout>